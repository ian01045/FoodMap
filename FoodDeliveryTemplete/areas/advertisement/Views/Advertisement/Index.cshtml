
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminIndexPage.cshtml";
}

@model IEnumerable<FoodDeliveryTemplete.Models.tAdvertisement>


@section style{
    <style>
        .thumb {
            width: 150px;
        }
    </style>
}
<div class="row">
    <div class="col-lg-offset-1 col-lg-10">
        <h2>管理員廣告管理</h2>
        <a href="@Url.Action("Create","Advertisement",new { Area="Advertisement"})" class="btn btn-primary"><span class="glyphicon glyphicon-star" aria-hidden="true"></span> 新增</a>

        <div>
            <table id="ProductTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(p => p.fAdvertisementID)
                        </th>
                        <th>@Html.DisplayNameFor(p => p.fRestaurantID)</th>
                        <th>@Html.DisplayNameFor(p => p.fPriceRegionID)</th>
                        <th>@Html.DisplayNameFor(p => p.fAppliedDate)</th>
                        <th>@Html.DisplayNameFor(p => p.fDays)</th>
                        <th>@Html.DisplayNameFor(p => p.fMediaIntroduction)</th>
                        <th>刪除</th>
                        <th>編輯</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var tAdvertisment in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(p => tAdvertisment.fAdvertisementID)
                            </td>
                            <td>
                                @Html.DisplayFor(p => tAdvertisment.fRestaurantID)
                            </td>
                            <td>
                                @Html.DisplayFor(p => tAdvertisment.fPriceRegionID)
                            </td>
                            <td>
                                @Html.DisplayFor(p => tAdvertisment.fAppliedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(p => tAdvertisment.fDays)
                            </td>
                            <td>
                                @Html.DisplayFor(p => tAdvertisment.fMediaIntroduction)
                            </td>
                            <td><a href="@Url.Action("Delete","Advertisement",new { Area="Advertisement"})/@tAdvertisment.fAdvertisementID" class="btn btn-danger">刪除</a></td>
                            <td><a href="@Url.Action("Edit","Advertisement",new { Area="Advertisement"})/@tAdvertisment.fAdvertisementID" class="btn btn-info">修改</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section script{
    <script>
        var path = location.pathname;
        $('.list-group').find('a[href ="' + path + '"]').addClass('active');
    </script>
}
