@using PagedList;
@using PagedList.Mvc;
@model IPagedList<FoodDeliveryTemplete.Models.tAdvertisement_Article>
@*IEnumerable*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminIndexPage.cshtml";
}
@section style{
    <style>
        <link href="~/Content/PagedList.css" rel="stylesheet" / > .thumb {
            width: 150px;
        }
    </style>

}
<div class="container">

    <h2>餐廳廣告管理</h2>
    <a href="@Url.Action("Create","AdvertisementClientPanel",new { Area= "Advertisement" })" class="btn btn-warning"><span class="glyphicon glyphicon-star" aria-hidden="true"></span> 新增</a>

    <div>
        <table id="ProductTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(p => p.First().fId)
                    </th>
                    <th>@Html.DisplayNameFor(p => p.First().fSubject)</th>
                 
                    <th>@Html.DisplayNameFor(p => p.First().fIsPublish)</th>
                    <th>@Html.DisplayNameFor(p => p.First().fCreateDate)</th>
                    <th>@Html.DisplayNameFor(p => p.First().fUpdateDate)</th>
                    <th>編輯</th>
                    <th>刪除</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var tAdvertisment_Article in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(p => tAdvertisment_Article.fId)
                        </td>
                        <td>
                            <a href="@Url.Action("Detail", "AdvertisementClientPanel", new { id = tAdvertisment_Article.fId})">
                                <div>@tAdvertisment_Article.fSubject</div>
                        </td>
                        <td>
                            @Html.DisplayFor(p => tAdvertisment_Article.fIsPublish)
                        </td>
                        <td>
                            @Html.DisplayFor(p => tAdvertisment_Article.fCreateDate)
                        </td>
                        <td>
                            @Html.DisplayFor(p => tAdvertisment_Article.fUpdateDate)
                        </td>
                        <td><a href="@Url.Action("Delete","AdvertisementClientPanel",new { Area="Advertisement"})/@tAdvertisment_Article.fId" class="btn btn-danger">刪除</a></td>
                        <td><a href="@Url.Action("Edit","AdvertisementClientPanel",new { Area="Advertisement"})/@tAdvertisment_Article.fId" class="btn btn-info">修改</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section script{
    <script>
        var path = location.pathname;
        $('.list-group').find('a[href ="' + path + '"]').addClass('active');
    </script>
}

