@model FoodDeliveryTemplete.Models.tAdvertisement_Article
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminIndexPage.cshtml";
}

<style>
    .thumb {
        width: 150px;
    }
</style>
@section style{

}

@section script{
    <script>
        var path = location.pathname;
        $('.list-group').find('a[href ="' + path + '"]').addClass('active');
        $(document).ready(function () { $("#input").cleditor(); });
    </script>
}
<div class="container">
@using (Html.BeginForm("Edit", "AdvertisementClientPanel", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>公告修改</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.fId)

        <div class="form-group">
            <select class="form-control" name="fRestaurantID">
                @foreach (var res in ViewBag.res)
                {
                    <option value="@res.fRestaurantID">@res.fRestaurantName </option>
                }
            </select>
        </div>

        @*fSubject*@
        <div class="form-group">
            @Html.LabelFor(model => model.fSubject, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fSubject, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fSubject, "", new { @class = "text-danger" })
            </div>
        </div>

        @*fContentText*@
        <div class="form-group">
            @Html.LabelFor(model => model.fContentText, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.fContentText, new { id = "input" })
                @Html.ValidationMessageFor(model => model.fContentText, "", new { @class = "text-danger" })
            </div>
        </div>

        @*fIsPublish*@
        <div class="form-group">
            @Html.LabelFor(model => model.fIsPublish, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.fIsPublish)
                    @Html.ValidationMessageFor(model => model.fIsPublish, "是否發佈", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @*fCreateDate*@
        <div class="form-group">
            @Html.LabelFor(model => model.fCreateDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fCreateDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fCreateDate, "廣告發佈日期", new { @class = "text-danger" })
            </div>
        </div>


        @*fUpdateDate*@
        <div class="form-group">
            @Html.LabelFor(model => model.fUpdateDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fUpdateDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fUpdateDate, "廣告更新日期", new { @class = "text-danger" })
            </div>
        </div>

        @*fPicture*@
        <div class="form-group">
            @Html.LabelFor(p => p.fImage, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @*@Html.EditorFor(p => p.fImage, new { htmlAttributes = new { type = "file", @class = "form-control", placeholder = "Product Image" } })*@
                @Html.ValidationMessageFor(p => p.fImage, "", new { @class = "text-danger" })
                <input type="file" name="fimg" class="form-control" />
                @ViewBag.message
            </div>
        </div>

        @*fHtml*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.fHtml, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fHtml, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fHtml, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="修改" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>



</div>






