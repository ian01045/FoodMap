@*搜尋列*@
<div class="row">
    <div class="col-lg-10 col-lg-offset-2">
            
            <div class="alert alert-warning" role="alert">
                @using (Html.BeginForm("Index2", "Select", FormMethod.Post, new { @class = "" }))
            {
                    <div class="input-group">
                        <div class="input-group-btn ">
                            <button type="button" class="form-control dropdown-toggle" data-toggle="dropdown" id="city_select_btn">
                                <span id="search_concept">縣市選擇</span> <span class="caret"></span>
                            </button>
                            <ul id="city_select" class="dropdown-menu" role="menu">
                                <li><a href="#taipei_city">  台北市  </a></li>
                                <li><a href="#">  新北市  </a></li>
                                <li><a href="#">  桃園市  </a></li>
                                <li class="divider"></li>
                                <li><a href="#">  台中市  </a></li>
                                <li><a href="#">  台南市  </a></li>
                                <li><a href="#">  高雄市  </a></li>
                            </ul>
                        </div>
                        <input type="hidden" name="search_param" value="all" id="search_param">

                        <input type="text" id="address" class="form-control " name="x" placeholder="輸入你所在的路名" style="color:black">


                        <span class="input-group-btn  ">
                            <button id="SelectRestaurant" class="form-control" type="button" title="地址搜尋位置"><span class="glyphicon glyphicon-home"></span></button>
                        </span>

                        <input type="text" class="hidden" id="current_latitude" name="current_latitude">
                        <input type="text" class="hidden" id="current_longitude" name="current_longitude">
                        <input type="text" class="hidden" id="current_address" name="current_address">
                        <input type="text" class="hidden" id="current_search_range" name="current_search_range">

                        <span class="input-group-btn ">
                            <button id="GetLocation" class="form-control" type="button" title="取得目前位置"><span class="glyphicon glyphicon-map-marker"></span></button>
                        </span>


                        <span class="input-group-btn ">
                            <button id="GoRestaurants" class="form-control" type="submit" title="前往餐廳列表"><span class="glyphicon glyphicon-search"></span></button>
                        </span>

                        @*<span class="input-group-btn ">
                            <a href="@Url.Action("Index2","Select",new { Area="yuwang", search_range =})" id="GoRestaurants" class="form-control" title="前往餐廳列表"><span class="glyphicon glyphicon-search"></span></a>
                        </span>*@

                    </div>
                }
     
            </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="alert alert-warning" role="alert" id="position_now_show" style="height:50px">目前位置: </div>
            </div>
            <div class="col-lg-3">
                <div id="slider" style="width:120px;height:20px;margin-top:15px">
                    <div id="custom-handle" class="ui-slider-handle"></div>
                </div>
            </div>
            <div class="col-lg-3">
                <div id="unit" class="alert alert-warning" role="alert" style="height:50px;width:100px; text-align:center">單位:公里</div>
            </div>
        </div>

                
       

            <div class="alert alert-warning" role="alert" id="res_name_search_row">
                <div class="input-group">
                    <input type="text" id="res_name" class="form-control " name="res_name" placeholder="輸入餐廳名稱" style="color:black">
                    <span class="input-group-btn ">
                        <button id="SearchResInMap" class="form-control" type="button" title="搜尋餐廳"><span class="glyphicon glyphicon-search"></span></button>
                    </span>
                </div>
            </div>
        </div>


</div>

@*地圖*@
<div class="row">
    <div id="map" style="width:600px;height:300px;margin-left:150px ;margin-top:10px"></div>
</div>





