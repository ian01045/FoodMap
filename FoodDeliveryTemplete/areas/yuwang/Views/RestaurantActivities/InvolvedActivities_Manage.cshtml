@using FoodDeliveryTemplete.Models

@model IEnumerable<FoodDeliveryTemplete.Models.tRestaurant_Category_Details>


<div class="col-lg-6">
    <div class="panel panel-warning">
        <div class="panel-heading">
            @if (Model.Count() == 0)
            {
                <h3 class="panel-title" style="display:inline">您目前沒有參與任何活動!</h3>
            }

            @if (Model.Count() > 0)
            {
                <h3 class="panel-title" style="display:inline">您目前參與的活動</h3>
            }
        </div>
        <div class="panel-body">
            @foreach (var detail in Model)
            {
                <div class="row">
                    <div class="col-lg-9">
                        <div class="alert alert-warning" role="alert">@detail.tRestaurant_Category.fCategory_Name</div>
                        @*<input class="form-group" value="@detail.tRestaurant_Category.fCategory_Name" readonly="readonly" />*@
                        @*<textarea class="form-group" readonly="readonly">@detail.tRestaurant_Category.fCategory_Description</textarea>*@
                    </div>
                    <div class="col-lg-3">
                        <button class="btn btn-warning btn_delete_act " value="@detail.fId">取消參與</button>
                    </div>
                </div>

            }
        </div>

    </div>
</div>
<div class="col-lg-6">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title" style="display:inline">平台活動</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-5">
                    <select id="act_sel">
                        @foreach (var res_category in ViewBag.res_categories)
                        {
                            <option value="@res_category.fRestaurant_CategoryID">@res_category.fCategory_Name</option> 
                        }
                    </select> 
                    <button class="btn btn-danger" id="act_add">參與活動</button>
@foreach (var res_category in ViewBag.res_categories)
{
    <input type="text" class="hidden" id="@res_category.fRestaurant_CategoryID" value="@res_category.fCategory_Description" />
}
                </div>
                <div class="col-lg-7 ">
                    <div class="thumbnail">
                        <div class="caption">
                            <h4>活動描述: </h4>
                            <h3></h3>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
