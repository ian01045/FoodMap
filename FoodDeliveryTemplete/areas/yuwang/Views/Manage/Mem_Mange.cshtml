@using PagedList;
@using PagedList.Mvc;

@*@model FoodDeliveryTemplete.Areas.yuwang.Controllers.ManageController.Member_Mange*@
@model IPagedList<FoodDeliveryTemplete.Models.tMemeber>
<div class="row">
    <div class="col-lg-9">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">一般會員管理 <a href="@Url.Action("Registed","Register",new { Area=""})" class="btn btn-warning"><span class="glyphicon glyphicon-plus"></span> 新增會員</a></h3> 
            </div>
            <div class="panel-body">
                
                <table class="table table-bordered table-hover" id="member_table">
                    <thead>
                        <tr>
                            <th>
                                @*@Html.DisplayNameFor(m => m.First().fMemberID)*@
                                @*@Html.ActionLink(Html.DisplayNameFor(m => m.First().fMemberID).ToHtmlString(), "Mem_Mange", "Manage", new { Area = "yuwang" }, null)*@
                                @*<a href="#" class="prevent" name="fMemberID" id="fMemberID">編號</a>*@
                                <button class="btn-warning" id="fMemberID" >編號</button>
                                @*<button class="alert alert-warning" role="alert" id="fMemberID">會員編號</button>*@
                                @*@Html.ActionLink("編號", "Index", "Home", new { sortBy = ViewBag.sortModelNumber }, null)*@
                            </th>
                            <th>
                                @*<a href="#" class="prevent" name="fMemeberName" id="fMemeberName">姓名</a>*@
                                <button class="btn-warning"id="fMemeberName" >姓名</button>
                            </th>
                            <th>
                                <button class="btn-warning"id="fGender" >性別</button>
                                @*<a href="#" class="prevent" name="fGender" id="fGender">性別</a>*@
                                @*<a href="#" class="prevent" name="photo_sticker" id="photo_sticker">大頭貼</a>*@
                            </th>

                            <th>
                                <button class="btn-warning"id="city" >城市</button>
                                @*<a href="#" class="prevent" name="city" id="city">城市</a>*@
                            </th>

                            <th>
                                <button class="btn-warning"id="area" >地區</button>
                                @*<a href="#" class="prevent" name="area" id="area">地區</a>*@
                            </th>
                            <th>
                                @*<a href="#" class="prevent" name="fBirth" id="fBirth">生日</a>*@
                                <button class="btn-warning"id="fBirth" >生日</button>
                            </th>
                            <th>
                                @*<a href="#" class="prevent" name="fJoinDate" id="fJoinDate">入會日期</a>*@
                                <button class="btn-warning" id="fJoinDate" >入會日期</button>
                            </th>
                            <th>
                                <button class="btn-warning" id="fWalletTotalMoney">電子錢包<br>餘額</button>
                                @*<a href="#" class="prevent" name="fWalletTotalMoney" id="fWalletTotalMoney">電子錢包餘額</a>*@
                            </th>
                            @*<th>
                                <label>編輯</label>
                            </th>*@
                            <th>
                                <button class="btn-warning">刪除</button>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Model)
                        {
                            <tr>
                                <td class="memID">@Html.DisplayFor(m => member.fMemberID)</td>
                                <td>
                                    @Html.DisplayFor(m => member.fMemeberName)
                                    @Html.HiddenFor(m => member.fPassword)
                                    @Html.HiddenFor(m => member.fEmail)
                                    @Html.HiddenFor(m => member.fCreditAccount)
                                    @Html.HiddenFor(m => member.fTel)
                                    @Html.HiddenFor(m => member.fPhone)
                                    @Html.HiddenFor(m => member.tMember_Area.tMember_City.fCityName)
                                    @Html.HiddenFor(m=>member.tMember_Area.fAreaName)
                                    @Html.HiddenFor(m => member.fAddress)
                                </td>

                                <td>
                                    @Html.DisplayFor(m => member.fGender)
                                    @*<img src="@Url.Action("GetImageByte","Select",new { Area="yuwang",id=member.fMemberID}) " class="thumb" />*@
                                </td>
                                <td>
                                    @Html.DisplayFor(m => member.tMember_Area.tMember_City.fCityName)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => member.tMember_Area.fAreaName)
                                </td>

                                <td>
                                    @*@Html.DisplayFor(m => member.fBirth)*@
                                    @string.Format("{0:yyyy/MM/dd}", member.fBirth)
                                </td>

                                <td>
                                    @*@Html.DisplayFor(m => member.fJoinDate)*@
                                    @string.Format("{0:yyyy/MM/dd}", member.fJoinDate)
                                </td>

                                <td>
                                    @*@Html.DisplayFor(m => member.fWalletTotalMoney)*@
                                    @string.Format("{0:c0}", member.fWalletTotalMoney)
                                    
                                </td>

                                @*<td>
                                    <button class="btn btn-warning btn_edit ">編輯</button>
                                    <a href="@Url.Action("MemberModifyForm","MemberArea",new { Area="Member",id=member.fMemberID})" class="btn btn-info"><span class="glyphicon glyphicon-pencil"></span></a>

                                </td>*@
                                <td>
                                    @*<a href="" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></a>*@
                                    <button  class="btn btn-warning delete"><span class="glyphicon glyphicon-trash"></span></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div id="myPager">
                    @Html.PagedListPager(Model, page => Url.Action("Mem_Mange", "Manage", new { Area = "yuwang", id = ViewBag.id, page }), PagedListRenderOptions.Classic)
                </div>
            </div>

            @*@Html.PagedListPager(Model.mem, page => Url.Action("Mem_Mange", "Manage", new { page, Area = "yuwang", id = 0 }), PagedListRenderOptions.Classic)*@

        </div>
    </div>

    <div class="col-lg-3">
        <div class="thumbnail">
            <img src="" />
            <div class="caption">
                <h3>請選擇欲管理會員</h3>
                <p id="email"></p>
                <p id="address"></p>
                <p id="credit"></p>
                <p id="tel"></p>
            </div>
            <div id="btn_area">
            </div>
            @*<button class="btn btn-warning">基本資料編輯</button>
            <button class="btn btn-warning">電子錢包加值</button>
            <button class="btn btn-warning">我的最愛修改</button>*@
        </div>
    </div>
</div>

