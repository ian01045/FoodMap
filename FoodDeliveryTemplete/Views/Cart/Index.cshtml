@model  FoodDeliveryTemplete.ViewModels.CartListViewModel


<div id="cartindexdiv" class="container">       
         @Html.Partial("_Meal",Model)
</div>

@section script
{
    <script>
        $(document).ready(function () {

            $(".modal-footer .quantity-right-plus").on("click", function (e) {
                var ID = $(this).parents(".input-group").children(".quantity");
                e.preventDefault();
                var quantity = parseInt(ID.val());
                ID.val(quantity + 1);
            })
