            //按下去進入購物車事件
            //取數量的值
            $(".modal-footer .gotoCart").on("click", function () {
                var Url = $(this).val();//Url
                var Value = $(this).siblings(".container").find(".quantity").eq(0).val();
                //console.log(Url);
                //console.log(Value)
                // /Amy/Cart/AddToCart?fFoodID=22原本
                // /Amy/Cart/AddToCart/1?fFoodID=22替換後
                var NewUrl = Url.replace("?", "/" + Value + "?");
                window.location.href = NewUrl;
            });


